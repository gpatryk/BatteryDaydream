<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
            android:key="use_fake_battery_monitor"
            android:title="@string/use_fake_battery_monitor"
            android:defaultValue="false"/>
    <EditTextPreference
            android:key="initial_battery_level"
            android:title="@string/initial_battery_level"
            android:defaultValue="50"
            android:dependency="use_fake_battery_monitor" />
    <CheckBoxPreference
            android:key="work_in_continuous_mode"
            android:title="@string/work_in_continuous_mode"
            android:defaultValue="false"
            android:dependency="use_fake_battery_monitor"/>
</PreferenceScreen>
